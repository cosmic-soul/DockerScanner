modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Docker Service Manager"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "docker_manager_test"

[[workflows.workflow]]
name = "Docker Service Manager"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python docker_service_manager.py"
waitForPort = 5000

[[workflows.workflow]]
name = "docker_manager_test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python docker_service_manager.py service status"

[deployment]
run = ["sh", "-c", "python docker_service_manager.py"]
