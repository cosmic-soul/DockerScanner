modules = ["python-3.11", "python3"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Full Test Suite"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Docker Service Manager"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "docker_manager_test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Docker Service Manager TUI"

[[workflows.workflow]]
name = "Docker Service Manager"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python docker_service_manager.py --interactive --demo"

[[workflows.workflow]]
name = "docker_manager_test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python docker_service_manager.py --interactive --demo"

[[workflows.workflow]]
name = "Docker Service Manager TUI"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python docker_service_manager.py --tui --demo"

[[workflows.workflow]]
name = "Run Tests"
author = 18984519
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m unittest discover tests/"

[[workflows.workflow]]
name = "Full Test Suite"
author = 18984519
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m unittest discover tests/"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flake8 docker_manager/"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mypy docker_manager/"

[deployment]
run = ["sh", "-c", "python docker_service_manager.py --interactive --demo"]
